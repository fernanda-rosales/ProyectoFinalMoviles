<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="321dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toTopOf="@+id/txtEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:background="#00F5EEEE"
        android:text="Email"
        android:textColor="#100E11"
        android:textSize="24sp"
        app:fontFamily="@font/carrois_gothic"
        app:layout_constraintBottom_toTopOf="@+id/editTextEmailEntrar"
        app:layout_constraintEnd_toEndOf="@+id/editTextEmailEntrar"
        app:layout_constraintStart_toStartOf="@+id/editTextEmailEntrar"
        app:layout_constraintTop_toBottomOf="@+id/logoImage" />

    <TextView
        android:id="@+id/txtContrase単a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="20dp"
        android:text="Contrase単a"
        android:textColor="#100E11"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextContrasenaEntrar"
        app:layout_constraintStart_toStartOf="@+id/editTextEmailEntrar"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmailEntrar" />

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="239dp"
        android:layout_height="57dp"
        android:layout_gravity="center"

        android:layout_marginBottom="29dp"
        android:background="#FF9800"
        android:text="Entrar"
        android:textColor="#FCF6F6"
        app:layout_constraintBottom_toTopOf="@+id/btnRegistro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextContrasenaEntrar" />

    <EditText
        android:id="@+id/editTextEmailEntrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/txtContrase単a"
        app:layout_constraintEnd_toEndOf="@+id/editTextContrasenaEntrar"
        app:layout_constraintStart_toStartOf="@+id/editTextContrasenaEntrar"
        app:layout_constraintTop_toBottomOf="@+id/txtEmail" />

    <EditText
        android:id="@+id/editTextContrasenaEntrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/btnEntrar"
        app:layout_constraintStart_toStartOf="@+id/btnEntrar"
        app:layout_constraintTop_toBottomOf="@+id/txtContrase単a" />

    <Button
        android:id="@+id/btnRegistro"
        android:layout_width="230dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_marginBottom="143dp"
        android:background="#3F51B5"
        android:text="Registro"
        android:textColor="#FCF6F6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEntrar" />

</androidx.constraintlayout.widget.ConstraintLayout>